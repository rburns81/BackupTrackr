@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Manage Hard Drives";

    var legend = "Add Hard Drive";
    var label = "";
    var serial = "";
    var status = "";
    var size = "";
    var hiddenField = "";
    var id = "";

    if(!Request.QueryString["id"].IsEmpty()){
        legend = "Edit Hard Drive";
        id = Request.QueryString["id"];
        var db = Database.Open("BackupTrackr");
        var selectQuery = @"SELECT HardDrives.label, HardDrives.Serial,
                                   HardDriveStatuses.description,
                                   HardDrives.size 
                              FROM HardDrives 
                              JOIN HardDriveStatuses
                                ON HardDrives.status = HardDriveStatuses.id
                             WHERE HardDrives.id=@0";
        var result = db.QuerySingle(selectQuery,id);
        label = result.label;
        serial = result.serial;
        status = result.description;
        size = result.size.ToString();
        
    }
}


<form class="form-horizontal" role="form" method="post">
    <div class="form-group">
        <label for="label" class="col-sm-2 control-label">Label</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="label" value="@label" />
        </div>
        <label for="serial" class="col-sm-2 control-label">Serial</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="serial" value="@serial" />
        </div>
        <label for="status" class="col-sm-2 control-label">Status</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="status" value="@status" />
        </div>
        <label for="size" class="col-sm-2 control-label">Size</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="size" value="@size" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="hidden" name="id" value="@id" />
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
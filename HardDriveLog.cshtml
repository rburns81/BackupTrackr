@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Hard Drive Inventory";
    Page.Heading = "List of Backup Hard Drives";

    var db = Database.Open("BackupTrackr");
    var selectData = @"SELECT HardDrives.label, HardDrives.serial,
                              HardDriveStatuses.description, HardDrives.size
                         FROM HardDrives
                         JOIN HardDriveStatuses
                           ON HardDrives.status = HardDriveStatuses.id";
    var selectedData = db.Query(selectData);
    WebGrid grid = new WebGrid(source: selectedData);
}

<div>
    @grid.GetHtml()
</div>